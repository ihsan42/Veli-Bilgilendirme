<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/spinnerOdevDersler"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="105dp"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spinnerHazırMesajlarım"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="205dp"
        android:spinnerMode="dropdown"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMesajGonderilecekler2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="255dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonIptalAutoSMS2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="İptal" />

        <Button
            android:id="@+id/buttonGonderAutoSMS2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Gönder" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupSMS2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp"
        android:layout_marginTop="55dp"
        android:checkedButton="@+id/radioButtonOdev">

        <RadioButton
            android:id="@+id/radioButtonOdev"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ödevini yapmadı. (Ders seç)" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/radioButtonHazırMesajlar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Hazır mesajlarım (Mesaj Seç)" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorMyDarkGreen"
        android:gravity="center"
        android:text="Sms Gönderilsin mi?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>