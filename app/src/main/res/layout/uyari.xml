<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/buttonKapat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBoxBirDahaGösterme"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTitleText"
        android:text="Kapat" />

    <CheckBox
        android:id="@+id/checkBoxBirDahaGösterme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView17"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentRight="true"
        android:text="Bir daha gösteme" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="DİKKAT!"
        android:textColor="@color/colorTitleText"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView15"
        android:padding="10dp"
        android:text="Lüften E-Okul/Öğrenci İşlemleri modülü Raporlar sayfasından ilkokul-ortaokul için IOG02005, lise için OOG01001R020 rapor kodlu Sınıf Listesini(Öğrenci no sıralı) Excel(Sadece Veri) formatında indirdiğinizden emin olun."
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="normal" />

</RelativeLayout>