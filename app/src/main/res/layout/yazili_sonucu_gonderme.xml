<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="155dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonIptalYaziliSms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="İptal" />

        <Button
            android:id="@+id/buttonGonderYaziliSms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Gönder" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupSMS2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonYazili1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="1.Yazılı notu gönder" />

        <RadioButton
            android:id="@+id/radioButtonYazili2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2.Yazılı notu gönder" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorMyDarkGreen"
        android:gravity="center"
        android:text="Sms Gönderilsin mi?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>