<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YoklamaKayitlari">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/textViewYokKayit"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="3dp"
        android:background="@color/colorMyDarkGreen">

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewYokKayit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorMyDarkGreen"
        android:gravity="center"
        android:text="Yoklama Kayıtları"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/listViewYokKayit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spinnerYokKayit" />

    <Spinner
        android:id="@+id/spinnerYokKayit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_below="@id/textViewYokKayit"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="3dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center" />


    <Button
        android:id="@+id/buttonSilTum"
        style="@android:style/Widget.Button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textViewYokKayit"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_delete_black_24dp" />

</RelativeLayout>