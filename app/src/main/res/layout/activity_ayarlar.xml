<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".Ayarlar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/toolbar_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="Ayarlar"
                    android:textColor="@color/colorTitleText"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switchOkulAdi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/textView2"
                    android:paddingLeft="10dp"
                    android:text="Gönderilen SMS'lere okul ismi eklensin"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <Switch
                    android:id="@+id/switchIsim"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/switchOkulAdi"
                    android:paddingLeft="10dp"
                    android:text="Gönderilen SMS'lere ismim eklensin"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <Switch
                    android:id="@+id/switchBrans"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/switchIsim"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="10dp"
                    android:text="Gönderilen SMS'lere branşım eklensin"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonAyarYedektenAl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/switchBrans"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Yedekten Al"
                    android:textColor="@color/colorTitleText"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonAyarYedekle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/buttonAyarYedektenAl"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Yedekle"
                    android:textColor="@color/colorTitleText"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonAyarExcelTaslak"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/buttonAyarYedekle"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Sınıf Listesi İçin Excel Taslağı İndir"
                    android:textColor="@color/colorTitleText"
                    android:textSize="15dp"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <fragment
        android:id="@+id/fragmentMenu"
        android:name="com.egitimyazilim.iletisim.mesajlarvelibilgilendirme.fragments.MenuContentFragment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/toolbar_size" />

    <include
        android:id="@+id/toolbarKisBil"
        layout="@layout/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentBottom="true" />

</RelativeLayout>