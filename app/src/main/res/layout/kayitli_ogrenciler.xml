<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_marginTop="200dp"
        android:id="@+id/textViewKaytOgr"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <ListView
        android:id="@+id/listViewKayitliOgr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarKayOgr"
        android:layout_above="@id/editTextKayitliOgrArama">

    </ListView>

    <LinearLayout
        android:id="@+id/toolbarKayOgr"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/textView3"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"></LinearLayout>

    <Button
        android:id="@+id/buttonKaytOgrOk"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/textView3"
        android:layout_toLeftOf="@id/buttonKaytOgrCancel"
        android:background="@drawable/ic_check_circle_white24dp" />

    <Button
        android:id="@+id/buttonKaytOgrCancel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textView3"
        android:background="@drawable/ic_cancel_white_24dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:text="Kayıtlı Öğrenciler"
        android:textColor="@color/colorTitleText"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Spinner
        android:id="@+id/spinnerKayitliOgr"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/buttonKaytOgrOk"
        android:layout_below="@id/textView3" />

    <fragment
        android:id="@+id/fragmentMenu"
        android:name="com.egitimyazilim.iletisim.mesajlarvelibilgilendirme.fragments.MenuContentFragment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/editTextKayitliOgrArama"/>

    <include
        layout="@layout/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentBottom="true" />

    <EditText
        android:id="@+id/editTextKayitliOgrArama"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="66dp"
        android:ems="10"
        android:hint="Arama yap..."
        android:textColorHint="@color/colorTitleText"
        android:textColor="@color/colorTitleText"
        android:inputType="textPersonName" />

</RelativeLayout>