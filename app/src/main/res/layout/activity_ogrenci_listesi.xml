<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OgrenciListesi">

    <LinearLayout
        android:id="@+id/toolbarOgrLis"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTitleOgrLis"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:textColor="@color/colorTitleText"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbarOgrListButtons"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/toolbarOgrLis"

        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/buttonOgrSMS"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/toolbarOgrLis"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_mail_black_24dp"
        android:paddingTop="15dp"
        android:text="AUTO"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonOgrSave"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/toolbarOgrLis"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/buttonOgrSMS"
        android:background="@drawable/ic_save_black_24dp"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonOgrAdd"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/toolbarOgrLis"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/buttonOgrSave"
        android:background="@drawable/ic_person_add_black_24dp"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonOgrCall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart= "true"
        android:layout_below="@id/toolbarOgrLis"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_call_black_24dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOgrOtoSMS2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/toolbarOgrLis"
        android:layout_toRightOf="@id/buttonOgrCall"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_mail_black_24dp"
        android:paddingTop="15dp"
        android:text="AUTO"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOgrEdit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/buttonOgrOtoSMS2"
        android:layout_below="@+id/toolbarOgrLis"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_edit_black_24dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOgrDelete"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/toolbarOgrLis"
        android:layout_toRightOf="@id/buttonOgrEdit"
        android:background="@drawable/ic_delete_black_24dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOgrSpecialSMS"
        android:layout_width="45dp"
        android:layout_height="45dp"
       android:layout_below="@id/toolbarOgrLis"
        android:layout_toRightOf="@id/buttonOgrDelete"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_mail_black_24dp"
        android:paddingTop="15dp"
        android:text="Özel"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp"
        android:visibility="invisible" />


    <Button
        android:id="@+id/buttonOgrCancel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
       android:layout_toRightOf="@id/buttonOgrSpecialSMS"
        android:layout_below="@id/toolbarOgrLis"
        android:background="@drawable/ic_cancel_white_24dp"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/listViewOgrList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/toolbar_size"
        android:layout_below="@id/toolbarOgrListButtons" />

    <CheckBox
        android:layout_marginTop="5dp"
        android:id="@+id/checkBoxTumSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTitleText"
        android:button="@drawable/checbox_selector"
        android:text="Hepsini Seç"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/checkBoxSecimiKaldir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTitleText"
        android:button="@drawable/checbox_selector"
        android:layout_marginTop="5dp"
        android:text="Seçimi kaldır"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewMevcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_below="@id/toolbarOgrLis"
        android:textColor="@color/colorTitleText"
        android:textSize="15dp"
        android:textStyle="italic" />

    <fragment
        android:id="@+id/fragmentMenu"
        android:name="com.egitimyazilim.iletisim.mesajlarvelibilgilendirme.fragments.MenuContentFragment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/toolbar_size"/>

    <include
        layout="@layout/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentBottom="true" />

    <EditText
        android:id="@+id/editTextOgrListArama"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:ems="10"
        android:layout_marginRight="66dp"
        android:hint="Arama yap..."
        android:textColor="@color/colorTitleText"
        android:textColorHint="@color/colorTitleText"
        android:inputType="textPersonName" />

</RelativeLayout>