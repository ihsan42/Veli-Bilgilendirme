<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OgrenciListesi">

    <Button
        android:id="@+id/buttonOgrCall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonOgrSMS"
        android:layout_marginEnd="180dp"
        android:background="@drawable/ic_call_black_24dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOgrSMS"
        android:textSize="12dp"
        android:paddingTop="15dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonOgrSave"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_mail_black_24dp"
        android:text="AUTO" />

    <Button
        android:id="@+id/buttonOgrOtoSMS2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/buttonOgrSave"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_mail_black_24dp"
        android:paddingTop="15dp"
        android:text="AUTO"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOgrSave"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbarOgrLis"
        android:layout_marginStart="100dp"
        android:background="@drawable/ic_save_black_24dp" />

    <Button
        android:id="@+id/buttonOgrAdd"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonOgrCall"
        android:layout_marginStart="190dp"
        android:background="@drawable/ic_person_add_black_24dp" />

    <Button
        android:id="@+id/buttonOgrCancel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/buttonOgrSMS"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/ic_cancel_black_24dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOgrEdit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbarOgrLis"
        android:layout_marginEnd="60dp"
        android:background="@drawable/ic_edit_black_24dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOgrSpecialSMS"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/buttonOgrCall"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="120dp"
        android:background="@drawable/ic_mail_black_24dp"
        android:paddingTop="15dp"
        android:text="Özel"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOgrDelete"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/toolbarOgrLis"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="237dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/toolbarOgrLis"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorMyDarkGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTitleOgrLis"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorMyDarkGreen"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="55dp"

        android:orientation="vertical"></LinearLayout>

    <ListView
        android:id="@+id/listViewOgrList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="100dp" />

    <CheckBox
        android:layout_marginTop="5dp"
        android:id="@+id/checkBoxTumSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Hepsini Seç"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/checkBoxSecimiKaldir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Seçimi kaldır"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewMevcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="75dp"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextOgrListArama"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"

        android:layout_weight="1"
        android:ems="10"
        android:hint="Arama yap..."
        android:inputType="textPersonName" />

</RelativeLayout>